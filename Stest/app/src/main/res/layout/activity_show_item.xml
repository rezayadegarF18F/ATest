<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Show_item_activity"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:paddingTop="@dimen/appBar_paddingTop"
        app:elevation="4dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/Show_item_activity_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="نمایش اطلاعات"
            app:titleTextAppearance="@style/Toolbat_text_appearance"
            app:titleTextColor="@android:color/white"
            app:menu="@menu/show_item_activity_toolbar_menu"
            android:theme="@style/ToolBarTheme.ToolBarStyle" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/Image_show_img"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:tint="@android:color/black"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorPrimary"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/Title_show_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="48sp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/iransans"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/Sub_title_show_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="48sp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/iransans"/>


    </LinearLayout>

</LinearLayout>